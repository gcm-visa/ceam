  <script>
document.getElementById('searchForm').onsubmit = function(event) {
  event.preventDefault(); // Prevent form submission

  const idNumberInput = document.getElementById('idNumber').value;

  // Show the loading text
  const loadingText = document.getElementById('loading');
  loadingText.style.display = 'block';

  // Call the Apps Script function and handle the response
  google.script.run.withSuccessHandler(function(data) {
    displayResults(data);
    loadingText.style.display = 'none'; // Hide the loading text when done
  }).searchDataWithHeadingByID(idNumberInput);
};

function displayResults(data) {
  const resultsDiv = document.getElementById('results');
  const resultsContainer = document.getElementById('resultsContainer');

  resultsDiv.innerHTML = ''; // Clear any previous results

  if (data.heading) {
    // Display the heading
    const headingElement = `<h3 style="text-align:center; color:#2c3e50;">${data.heading}</h3>`;
    resultsDiv.innerHTML += headingElement;
  }

  if (data.results.length > 0) {
    // Generate the results table
    let table = '<table><tr><th>ID</th><th>Surname</th><th>First Name</th><th>Status</th></tr>';
    data.results.forEach(row => {
      table += `<tr><td>${row[0]}</td><td>${row[1]}</td><td>${row[2]}</td><td>${row[3]}</td></tr>`;
    });
    table += '</table>';
    resultsDiv.innerHTML += table;

    // Show the results container
    resultsContainer.style.display = 'block';
  } else {
    resultsDiv.innerHTML += '<p>No matching results found.</p>';
    resultsContainer.style.display = 'block';
  }
}
</script>

